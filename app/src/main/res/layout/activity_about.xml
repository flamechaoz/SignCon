<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angelo.gesture_to_speech.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="#bfbfbf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/man"
                android:layout_weight="2"
                android:background="@drawable/shapepink"
                android:layout_width="0dp"
                android:layout_height="70dp"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="180dp"
                android:text="Jerald Jon Pablo"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#f97e05"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="#bfbfbf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/boy"
                android:layout_weight="2"
                android:background="@drawable/shapepink"
                android:layout_width="0dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="180dp"
                android:text="Angelo R. Santiago"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#f97e05"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="#bfbfbf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/girl"
                android:layout_weight="2"
                android:background="@drawable/shapepink"
                android:layout_width="0dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="180dp"
                android:text="Sherilyn Geronimo"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#f97e05"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
